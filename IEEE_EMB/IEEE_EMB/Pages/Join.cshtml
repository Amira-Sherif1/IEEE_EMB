@page
@model IEEE_EMB.Pages.JoinModel
@{
    ViewData["Title"] = "Join IEEE BioInformatics";
}

@section Styles{
    <link rel="stylesheet" href="~/css/animations.css" />
    <link rel="stylesheet" href="~/css/join.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/js/animations.js" />
   

}


<div class="min-h-screen bg-gradient-to-b from-white to-teal-50">
    <!-- Hero Section -->
    <div class="hero-section text-center py-20 bg-gradient-to-r from-teal-600 to-teal-800" data-aos="fade-down">
        <h1 class="text-5xl font-bold text-white mb-6">Join IEEE BioInformatics</h1>
        <p class="text-xl text-teal-100 max-w-3xl mx-auto px-4">
            Be part of a global community advancing the frontiers of bioinformatics and computational biology
        </p>
    </div>

    <!-- Membership Cards Section -->
    <div class="container mx-auto px-4 py-16">
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
            <!-- Member Card -->
            <div class="membership-card bg-white rounded-xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300"
                 data-aos="fade-right">
                <div class="card-icon-wrapper mb-8">
                    <i class="fas fa-user-graduate text-6xl text-teal-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-teal-800 mb-6">Member</h2>
                <ul class="benefit-list space-y-4 mb-8">
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Access to exclusive workshops and training</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Network with industry professionals</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Join research collaborations</span>
                    </li>
                </ul>
                <a href="/apply/member" class="apply-button group">
                    Apply as Member
                    <i class="fas fa-arrow-right transition-transform group-hover:translate-x-2"></i>
                </a>
            </div>

            <!-- Mentor Card -->
            <div class="membership-card bg-white rounded-xl shadow-xl p-8 transform hover:scale-105 transition-all duration-300"
                 data-aos="fade-left">
                <div class="card-icon-wrapper mb-8">
                    <i class="fas fa-chalkboard-teacher text-6xl text-teal-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-teal-800 mb-6">Mentor</h2>
                <ul class="benefit-list space-y-4 mb-8">
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Guide aspiring professionals</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Share your expertise</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <i class="fas fa-check-circle text-teal-600"></i>
                        <span>Lead research initiatives</span>
                    </li>
                </ul>
                <a href="/apply/mentor" class="apply-button group">
                    Apply as Mentor
                    <i class="fas fa-arrow-right transition-transform group-hover:translate-x-2"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="bg-teal-50 py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-center text-teal-800 mb-12" data-aos="fade-up">Why Join Us?</h2>
            <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                    <i class="fas fa-laptop-code text-4xl text-teal-600 mb-4"></i>
                    <h3 class="text-xl font-bold text-teal-800 mb-2">Latest Technology</h3>
                    <p class="text-gray-600">Access cutting-edge tools and technologies in bioinformatics</p>
                </div>
                <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                    <i class="fas fa-users text-4xl text-teal-600 mb-4"></i>
                    <h3 class="text-xl font-bold text-teal-800 mb-2">Global Network</h3>
                    <p class="text-gray-600">Connect with professionals worldwide</p>
                </div>
                <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
                    <i class="fas fa-certificate text-4xl text-teal-600 mb-4"></i>
                    <h3 class="text-xl font-bold text-teal-800 mb-2">Certification</h3>
                    <p class="text-gray-600">Earn recognized certifications in your field</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });
    </script>
}