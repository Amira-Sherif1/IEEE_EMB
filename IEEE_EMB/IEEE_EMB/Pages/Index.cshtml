<script type="module" src="/main.js"></script>
  </body>

@section Scripts {
    <script src="~/js/news-slider.js"></script>
    <script>
        const carousel = new bootstrap.Carousel(document.getElementById('newsSlider'), {
            interval: 5000, // Change slides every 5 seconds
            wrap: true, // Continuous loop
            keyboard: true // Enable keyboard navigation
        });

        // Optional: Pause on hover
        document.getElementById('newsSlider').addEventListener('mouseenter', () => {
            carousel.pause();
        });

        document.getElementById('newsSlider').addEventListener('mouseleave', () => {
            carousel.cycle();
        });
    </script>
}