@section Styles{
    
    <link rel="stylesheet" href="~/css/join.css" />
    <style>
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --info-color: #0dcaf0;
        }

        body {
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
        }

        /* Hero Section */
        .hero-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #2c3e50, #3498db);
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('https://images.unsplash.com/photo-1532187863486-abf9dbad1b69?auto=format&fit=crop&w=1920&q=80') center/cover;
                opacity: 0.1;
                z-index: 0;
            }

            .hero-section .container {
                position: relative;
                z-index: 1;
            }

        /* Benefits Section */
        .benefits-section {
            padding: 5rem 0;
            background: #f8f9fa;
        }

            .benefits-section h2 {
                font-size: 2.5rem;
                color: #212529;
                margin-bottom: 3rem;
            }

        .benefit-card {
            text-align: center;
            padding: 2rem;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            height: 100%;
            transition: transform 0.3s ease;
        }

            .benefit-card:hover {
                transform: translateY(-5px);
            }

        .benefit-icon {
            width: 4rem;
            height: 4rem;
            background: rgba(13, 110, 253, 0.1);
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2rem;
            color: var(--primary-color);
        }

        .benefit-card h3 {
            font-size: 1.25rem;
            color: #212529;
            margin-bottom: 1rem;
        }

        .benefit-card p {
            color: #6c757d;
            margin: 0;
            line-height: 1.6;
        }
    </style>
    <style>
        .membership-section {
            padding: 5rem 0;
            background: white;
        }

        .membership-card {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .membership-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
            }

            .membership-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
            }

        .member::before {
            background: var(--primary-color);
        }

        .mentor::before {
            background: var(--secondary-color);
        }

        .participant::before {
            background: var(--info-color);
        }

        .card-icon {
            width: 3rem;
            height: 3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .member .card-icon {
            background: rgba(13, 110, 253, 0.1);
            color: var(--primary-color);
        }

        .mentor .card-icon {
            background: rgba(108, 117, 125, 0.1);
            color: var(--secondary-color);
        }

        .participant .card-icon {
            background: rgba(13, 202, 240, 0.1);
            color: var(--info-color);
        }

        .membership-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: #212529;
        }

        .benefits-list {
