<div class="session-container">
    <div class="session-content">
        <div class="session-info">
            <div class="info-card">
                <h2 class="session-title">@Model.session.Rows[0]["Title"]</h2>
                <div class="info-details">
                    <div class="info-item">
                        <i class="fas fa-calendar"></i>
                        <span>@Model.session.Rows[0][1]</span>
                    </div>
                    @if (Model.session != null && Model.session.Rows.Count > 0 && Model.session.Rows[0]["Task"] != DBNull.Value)
                    {
                        <div class="info-item">
                            <i class="fas fa-tasks"></i>
                            <a href="~/Task/@Model.session.Rows[0]["Task"]" class="doc-link">
                                <span>Task File</span>
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="info-item">
                            <i class="fas fa-info-circle"></i>
                            <span>No assigned tasks yet.</span>
                        </div>
                    }
                    @if (Model.session != null && Model.session.Rows.Count > 0 && Model.session.Rows[0]["TASK_ANSWER"] != DBNull.Value)
                    {
                    <div class="info-item">
                        <i class="fas fa-file-alt"></i>
                        <a href="~/TaskAnswer/@Model.session.Rows[0]["TASK_ANSWER"]" class="doc-link">
                            <span>Task Answer</span>
                            <i class="fas fa-download"></i>
                        </a>
                        </div>
                    }
                    else
                    {
                        <div class="info-item">
                            <i class="fas fa-info-circle"></i>
                            <span>No assigned answers yet.</span>
                        </div>
                    }

                    <div class="info-item">
                        <i class="fas fa-file-alt"></i>
                        <a href="~/Documents/@Model.session.Rows[0]["Document"]" class="doc-link">
                            <span>Documentation File</span>
                            <i class="fas fa-download"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="video-section">
            <div class="video-wrapper">
                <video id="lectureVideo" controls>
                    <source src="~/videos/@Model.session.Rows[0]["Video"]" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .session-container {
            padding: 2rem;
            background: #f8f9fa;
            min-height: 100vh;
        }

        .session-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 2rem;
        }

         media (max-width: 768px) {
            .session-content {
                grid-template-columns: 1fr;
            }
        }

        .session-info {
            position: sticky;
            top: 2rem;
            align-self: start;
        }

        .info-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .session-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .info-details {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem;
            background: #f8f9fa;
            border-radius: 8px;
            transition: background-color 0.2s;
        }

        .info-item:hover {
            background: #edf2f7;
        }

        .info-item i {
            color: #4a5568;
            width: 20px;
        }

        .doc-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #4299e1;
            text-decoration: none;
            transition: color 0.2s;
        }

        .doc-link:hover {
            color: #2b6cb0;
        }

        .video-section {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .video-wrapper {
            position: relative;
            padding-top: 56.25%; /* 16:9 Aspect Ratio */
            background: #1a202c;
        }

        video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        /* Custom video controls styling */
        video::-webkit-media-controls {
            background-color: rgba(0, 0, 0, 0.5);
        }

        video::-webkit-media-controls-panel {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-play-button {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-timeline {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-current-time-display {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-time-remaining-display {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-mute-button {
            display: flex !important;
            opacity: 1 !important;
        }

        video::-webkit-media-controls-volume-slider {
            display: flex !important;
            opacity: 1 !important;
        }
    </style>
}



