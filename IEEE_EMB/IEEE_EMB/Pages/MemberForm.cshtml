@page
@model MemberFormModel
@{
    ViewData["Title"] = "Member Application";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
}

@section Scripts {
    <script src="~/js/application.js"></script>
}

<div class="page-container">
    <div class="content-container">
        <div class="card">
            <div class="px-6 py-8">
                <h1 class="text-title text-center mb-8 text-white">Member Application</h1>

                <form id="memberForm" method="post" class="space-y-6">
                    <div class="form-grid">
                        <div>
                            <label asp-for="@Model.member.Name" class="form-label">Name</label>
                            <input asp-for="@Model.member.Name" class="form-input" required />
                            <span asp-validation-for="@Model.member.Name" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.Currentyear" class="form-label">Current Year</label>
                            <input asp-for="@Model.member.Currentyear" type="date" class="form-input" required />
                            <span asp-validation-for="@Model.member.Currentyear" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.Phone" class="form-label">Phone</label>
                            <input asp-for="@Model.member.Phone" type="text" class="form-input" required />
                            <span asp-validation-for="@Model.member.Phone" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.password" class="form-label">Password</label>
                            <input asp-for="@Model.member.password" type="password" class="form-input" required />
                            <span asp-validation-for="@Model.member.password" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.Email" class="form-label">Email</label>
                            <input asp-for="@Model.member.Email" type="email" class="form-input" required />
                            <span asp-validation-for="@Model.member.Email" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.PreviousExperience" class="form-label">Previous Experience</label>
                            <input asp-for="@Model.member.PreviousExperience" type="text" class="form-input" required />
                            <span asp-validation-for="@Model.member.PreviousExperience" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.Major" class="form-label">Major</label>
                            <input asp-for="@Model.member.Major" type="text" class="form-input" required />
                            <span asp-validation-for="@Model.member.Major" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.Brief" class="form-label">Brief</label>
                            <input asp-for="@Model.member.Brief" type="text" class="form-input" required />
                            <span asp-validation-for="@Model.member.Brief" class="form-error"></span>
                        </div>
                        <div>
                            <label asp-for="@Model.member.University" class="form-label">University</label>
                            <input asp-for="@Model.member.University" type="text" class="form-input" required />
                            <span asp-validation-for="@Model.member.University" class="form-error"></span>
                        </div>
                    </div>

                    <div class="flex justify-end space-x-4">
                        <a href="/Apply" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
