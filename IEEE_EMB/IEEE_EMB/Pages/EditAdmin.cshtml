@page
@model IEEE_EMB.Pages.EditAdminModel
@{
}
@{
    Layout = "~/Pages/Shared/DashLayout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Edit Admin</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Name -->
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input id="Name" name="Name" value="John Doe" class="form-control" />
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input id="Email" name="Email" value="admin@example.com" type="email" class="form-control" />
                    </div>

                    <!-- Role -->
                    <div class="form-group">
                        <label for="Role">Role</label>
                        <input id="Role" name="Role" value="Super Admin" class="form-control" />
                    </div>

                    <!-- CV -->
                    <div class="form-group">
                        <label for="CV">CV</label>
                        <input id="CV" name="CV" type="file" class="form-control" />
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label for="PhoneNumber">Phone Number</label>
                        <input id="PhoneNumber" name="PhoneNumber" value="1234567890" class="form-control" />
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input id="Password" name="Password" value="admin123" type="password" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}