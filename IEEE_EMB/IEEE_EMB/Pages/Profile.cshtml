@page
@model IEEE_EMB.Pages.ProfileModel
@{
    ViewData["Title"] = $"{Model.Name}'s Profile";
}

@section Styles{
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="profile-container">
    <main class="profile-content">
        <h2 class="profile-title">@Model.Name's Profile</h2>
        
        <div class="profile-grid">
            <div class="profile-left">
                <div>
                    <img src="/images/User.png" alt="Profile picture" width="200" height="200" style="margin-bottom: 20px; margin-left: 20px;"/>
                </div>
                
                
                
                    <div class="info-item">
                        <label>Full Name:</label>
                        <span>@Model.Name</span>
                        
                    </div>
                    
                    <div class="detail-item">
                        <label>Email:</label>
                        <span>@Model.Email</span>
                       
                    </div>
                    
                    <div class="detail-item">
                        <label>University:</label>
                        <span>@Model.University</span>
                       
                    </div>
                    
                    @* <div class="detail-item">
                        <label>Committee:</label>
                        <span>@Model.</span>
                        <button class="edit-btn" title="Edit">✎</button>
                    </div> *@
                
            </div>

            <div class="profile-right">
                <h3>More About Me! [@Model.Name]</h3>
                
                <div class="info-grid">
                    <div class="info-item">
                        <label>Phone</label>
                        <span>@Model.Phone</span>
                        
                    </div>
                    
                    <div class="info-item">
                        <label>Current Year</label>
                        <span>2024</span>
                        
                    </div>
                    
                    <div class="info-item">
                        <label>Experience</label>
                        <span>@Model.Brief</span>
                        
                    </div>
                    
                    @* <div class="info-item">
                        <label>Bio</label>
                        <span>Mohammad Maher Ibraaaaaahim</span>
                        <button class="edit-btn" title="Edit">✎</button>
                    </div> *@
                </div>

               @*  <div class="pagination">
                    <button class="prev">←</button>
                    <button class="active">1</button>
                    <button>2</button>
                    <button>3</button>
                    <button class="next">→</button>
                </div> *@
            </div>
        </div>
    </main>
</div>