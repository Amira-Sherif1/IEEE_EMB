@* @page
@model IEEE_EMB.Pages.WorkshopsModel
@{
    ViewData["Title"] = "Workshops";
}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Workshops</h1>
        @if (User.IsInRole("Admin"))
        {
            <a href="/Workshops/Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
                Create Workshop
            </a>
        }
    </div>

    @if (!Model.Workshops.Any())
    {
        <div class="text-center py-8">
            <p class="text-gray-600">No workshops available at the moment.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var workshop in Model.Workshops)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    @if (!string.IsNullOrEmpty(workshop.ImageUrl))
                    {
                        <img src="@workshop.ImageUrl" alt="@workshop.Title" class="w-full h-48 object-cover">
                    }
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-2">@workshop.Title</h2>
                        <p class="text-gray-600 mb-4">@workshop.Description</p>
                        <div class="flex items-center text-sm text-gray-500 mb-4">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>@workshop.StartDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-blue-600 font-semibold">@workshop.Price.ToString("C")</span>
                            <a href="/Workshops/Details/@workshop.Id"
                               class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> *@