@page
@model IEEE_EMB.Pages.EditMemberModel
@{
}
@{
    Layout = "~/Pages/Shared/DashLayout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Edit Member</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Name -->
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input id="Name" name="Name" value="Jane Smith" class="form-control" />
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input id="Email" name="Email" value="member@example.com" type="email" class="form-control" />
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label for="PhoneNumber">Phone Number</label>
                        <input id="PhoneNumber" name="PhoneNumber" value="9876543210" class="form-control" />
                    </div>

                    <!-- Major -->
                    <div class="form-group">
                        <label for="Major">Major</label>
                        <input id="Major" name="Major" value="Computer Science" class="form-control" />
                    </div>

                    <!-- Status -->
                    <div class="form-group">
                        <label for="Status">Status</label>
                        <select id="Status" name="Status" class="form-control">
                            <option value="Active" selected>Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
   

</div>
@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


