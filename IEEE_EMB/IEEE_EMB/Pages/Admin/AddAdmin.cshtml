@page
@model IEEE_EMB.Pages.Admin.AddAdminModel
@{
}
@{
    Layout = "~/Pages/Shared/DashLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Add Admin Form -->
    <div class="mb-4">
        <h5 class="mb-0">Add Admin</h5>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <!-- Name -->
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input asp-for="@Model.admin.Name" type="text" class="form-control" />
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="Email" class="control-label">Email</label>
                    <input asp-for="@Model.admin.Email" type="email" class="form-control" />
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label for="Password" class="control-label">Password</label>
                    <input asp-for="@Model.admin.password" type="password" class="form-control" />
                </div>

                <!-- Role -->
                <div class="form-group">
                    <label for="Role" class="control-label">Role</label>
                    <input asp-for="@Model.admin.Role" class="form-control" />
                </div>

                <!-- CV -->
                <div class="form-group">
                    <label for="CV" class="control-label">CV</label>
                    <input asp-for="@Model.admin.CV" type="file" class="form-control" />
                </div>

                <!-- Phone Number -->
                <div class="form-group">
                    <label for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="@Model.admin.Phone" type="tel" class="form-control" />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
